<Window x:Class="PdfEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PdfEditor.ViewModels"
        xmlns:models="clr-namespace:PdfEditor.Models"
        mc:Ignorable="d"
        Title="PDF Viewer & Editor"
        Height="900"
        Width="1400">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OpenCommand}" />
                <MenuItem Header="Save As" Command="{Binding SaveCommand}" />
                <Separator />
                <MenuItem Header="Exit" Command="{x:Static ApplicationCommands.Close}" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Insert Page After" Command="{Binding InsertPageCommand}" />
                <MenuItem Header="Delete Page" Command="{Binding DeletePageCommand}" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Pointer" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Pointer}" />
                <MenuItem Header="Highlight" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Highlight}" />
                <MenuItem Header="Text" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Text}" />
                <MenuItem Header="Rectangle" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Rectangle}" />
                <MenuItem Header="Ellipse" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Ellipse}" />
                <MenuItem Header="Freehand" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Freehand}" />
                <MenuItem Header="Comment" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Comment}" />
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Background="#F1F1F1" Padding="8" Spacing="6">
            <TextBlock Text="Tools:" VerticalAlignment="Center" Margin="0,0,8,0" />
            <UniformGrid Rows="1" Columns="7">
                <Button Style="{StaticResource ToolButton}" Content="Pointer" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Pointer}" />
                <Button Style="{StaticResource ToolButton}" Content="Highlight" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Highlight}" />
                <Button Style="{StaticResource ToolButton}" Content="Text" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Text}" />
                <Button Style="{StaticResource ToolButton}" Content="Rect" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Rectangle}" />
                <Button Style="{StaticResource ToolButton}" Content="Ellipse" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Ellipse}" />
                <Button Style="{StaticResource ToolButton}" Content="Freehand" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Freehand}" />
                <Button Style="{StaticResource ToolButton}" Content="Comment" Command="{Binding SetToolCommand}" CommandParameter="{x:Static models:AnnotationType.Comment}" />
            </UniformGrid>
            <Separator Width="10" />
            <TextBlock Text="Text:" VerticalAlignment="Center" />
            <TextBox Width="150" Margin="4,0" Text="{Binding ToolOptions.TextContent, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Comment:" VerticalAlignment="Center" />
            <TextBox Width="150" Margin="4,0" Text="{Binding ToolOptions.CommentContent, UpdateSourceTrigger=PropertyChanged}" />
            <Separator Width="10" />
            <Button Content="Fit Page" Command="{Binding FitPageCommand}" />
            <Button Content="Fit Width" Command="{Binding FitWidthCommand}" />
            <Button Content="-" Width="30" Command="{Binding ZoomOutCommand}" />
            <TextBlock Text="Zoom" VerticalAlignment="Center" Margin="6,0" />
            <Slider Width="120" Minimum="0.25" Maximum="4" Value="{Binding ZoomLevel, Mode=TwoWay}" />
            <Button Content="+" Width="30" Command="{Binding ZoomInCommand}" />
            <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}" VerticalAlignment="Center" Margin="8,0" />
        </StackPanel>

        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,1,1,0" Background="#FFFFFF">
            <DockPanel>
                <TextBlock Text="Pages" FontWeight="Bold" Padding="8" />
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Pages}" SelectedItem="{Binding SelectedPage}" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="6">
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1">
                                        <Image Source="{Binding Thumbnail}" Stretch="Uniform" Height="120" />
                                    </Border>
                                    <TextBlock Text="{Binding DisplayPageNumber}" HorizontalAlignment="Center" Margin="0,4,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="2" Grid.Column="1" Background="#EDEDED" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}" />
                </Grid.LayoutTransform>
                <Grid>
                    <Image x:Name="PageImage" Source="{Binding SelectedPage.PageImage}" Stretch="None"
                           Width="{Binding SelectedPage.PixelWidth}" Height="{Binding SelectedPage.PixelHeight}" />
                    <ItemsControl ItemsSource="{Binding SelectedPage.Annotations}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas x:Name="AnnotationCanvas" Background="Transparent"
                                        MouseDown="AnnotationCanvas_MouseDown"
                                        MouseMove="AnnotationCanvas_MouseMove"
                                        MouseUp="AnnotationCanvas_MouseUp"
                                        Width="{Binding SelectedPage.PixelWidth}"
                                        Height="{Binding SelectedPage.PixelHeight}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding Bounds.X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Bounds.Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:AnnotationViewModel}">
                                <Grid>
                                    <Rectangle StrokeThickness="{Binding StrokeThickness}" Stroke="{Binding Stroke}"
                                               Fill="{Binding Fill}"
                                               Visibility="{Binding Type, Converter={StaticResource TypeToRectVisibility}}"
                                               Width="{Binding Bounds.Width}" Height="{Binding Bounds.Height}" />
                                    <Ellipse StrokeThickness="{Binding StrokeThickness}" Stroke="{Binding Stroke}" Fill="Transparent"
                                             Visibility="{Binding Type, Converter={StaticResource TypeToEllipseVisibility}}"
                                             Width="{Binding Bounds.Width}" Height="{Binding Bounds.Height}" />
                                    <Polyline StrokeThickness="{Binding StrokeThickness}" Stroke="{Binding Stroke}"
                                              Points="{Binding Points}" Visibility="{Binding Type, Converter={StaticResource TypeToPolylineVisibility}}" />
                                    <TextBlock Text="{Binding Text}" Foreground="{Binding Stroke}"
                                               Visibility="{Binding Type, Converter={StaticResource TypeToTextVisibility}}"
                                               Width="{Binding Bounds.Width}" Height="{Binding Bounds.Height}" />
                                    <Border Background="#FFEAD1" BorderBrush="#C47D00" BorderThickness="1" Padding="4"
                                            Visibility="{Binding Type, Converter={StaticResource TypeToCommentVisibility}}">
                                        <TextBlock Text="{Binding Text}" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </ScrollViewer>

        <StatusBar Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem Content="{Binding Status}" />
        </StatusBar>
    </Grid>
</Window>
