<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:PdfEditor.Converters">
    <Style TargetType="Button" x:Key="ToolButton">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="MinWidth" Value="60" />
    </Style>
    <SolidColorBrush x:Key="HighlightBrush" Color="#FFFFB200" Opacity="0.35" />
    <SolidColorBrush x:Key="PrimaryStroke" Color="#FF0066B2" />

    <converters:RectVisibilityConverter x:Key="TypeToRectVisibility" />
    <converters:EllipseVisibilityConverter x:Key="TypeToEllipseVisibility" />
    <converters:PolylineVisibilityConverter x:Key="TypeToPolylineVisibility" />
    <converters:TextVisibilityConverter x:Key="TypeToTextVisibility" />
    <converters:CommentVisibilityConverter x:Key="TypeToCommentVisibility" />
</ResourceDictionary>
